<%- partial ('../../common/admin_nav.ejs') %>
<!--// Modal Edit Post-->
<div class="container" id="editPostModal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">EDIT POST</h4>
      </div>
      <div class="modal-body">
        <form class="form-horizontal" id="edit-post-form">
          <div class="form-group">
            <label class="control-label col-sm-2" for="category">Category</label>
            <div class="col-sm-10">
              <span class="sr-only catch-cid"><%= result.cid %></span>
              <select class="form-control" name="cid" id="cid">

                <% _.each(allCategory, function(category) { %>
                <option name="cid<%= category.id %>" value="<%= category.id %>"><%= category.name %></option>
                <% }) %>
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="name">Name:</label>
            <div class="col-sm-10">
              <input class="sr-only" name="id" value="<%= result.id %>">
              <input type="text" class="form-control" name="name" id="name" value="<%= result.name %>">
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="slug">Slug</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" name="slug" id="slug" value="<%= result.slug %>" required>
            </div>
          </div>



          <% if (result.kind != 'article') {%>
          <div class="form-group">
            <label class="control-label col-sm-2" for="type">Type:</label>
            <div class="col-sm-10">
              <select class="form-control" name="type" id="type">
                <option value="1">Youtube</option>
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="source">Source:</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" name="source" id="source" value="<%= result.source %>">
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="thumbnail">Thumbnail:</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" name="thumbnail" id="thumbnail" value="<%= result.thumbnail %>">
              <img class="gen-thumb" src="">
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="Time">Time:</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" name="time" id="time" value="<%= result.time %>">
            </div>
          </div>
          <% } %>
          <div class="form-group">
            <label class="control-label col-sm-3" for="description">Description</label>
            <div class="col-sm-9">
              <textarea rows="5" style="width:100%" colclass="form-control" name="description" id="description" required><%= result.description %></textarea>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="content">Content:</label>
            <div class="col-sm-10">
              <textarea class="form-control" name="content" id="edit-content" contenteditable="true"><%= result.content %></textarea>
            </div>
          </div>


          <div class="form-group">
            <label class="control-label col-sm-2" for="featured">Featured:</label>
            <div class="col-sm-10">
              <select class="form-control" name="featured" id="feature">
                <% if (result.featured == 0) { %>
                <option value="0" selected="selected">No</option>
                <option value="1">Yes</option>
                <% } else { %>
                <option value="0">No</option>
                <option value="1" selected="selected">Yes</option>
                <% } %>
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="description">Status:</label>
            <div class="col-sm-10">
              <select class="form-control" name="status" id="status">
                <% if (result.status == 1) { %>
                <option class="val1" value="1" selected="selected">Show</option>
                <option class="val0" value="0">Hide</option>
                <% } else { %>
                <option class="val1" value="1">Show</option>
                <option class="val0" value="0" selected="selected">Hide</option>
                <% } %>
              </select>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button onclick="goBack()" class="btn btn-default"><i class="fa fa-reply"></i> Go Back</button>
              <button type="submit" class="btn btn-primary"><i class="fa fa-pencil-square-o"></i> Edit</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
