<div class="post-page">

  <%- partial ('common/navbar.ejs') %>
  <div class="container">
    <div id="main-post" class="col-sm-8">
      <% if (result.kind=='article') { %>
      <% } else { %>
      <div class="embed-responsive embed-responsive-16by9">
        <% if (result.type==1) { %>
        <iframe class="embed-responsive-item" src="//www.youtube.com/embed/<%= result.source %>"></iframe>
        <% } else if (result.type==2){ %>
        <video controls><source src="<%= result.source %>" type="video/mp4"></video>
        <% } else { %>
        <iframe class="embed-responsive-item" src="https://drive.google.com/file/d/<%= result.source %>/preview"></iframe>
        <% } %>
      </div>

      <% } %>
      <!--//nội dung phim-->
      <input class="sr-only" name="ogthumb" value="<%= result.thumbnail %>">
      <div id="post-content" class="panel panel-default">
        <% if (result.kind == 'article') { %>
        <div class="panel-heading"><%= result.name %></div>
        <div class="article-desc panel-body"><%= result.description %></div>

        <div class="fb-share-button" data-href="http://vnmagic.net<%= req.url %>" data-layout="button_count" data-size="large" data-mobile-iframe="true"><a class="fb-xfbml-parse-ignore" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fdevelopers.facebook.com%2Fdocs%2Fplugins%2F&amp;src=sdkpreparse">Share</a></div>
        <% } else { %>
        <div class="panel-heading"><%= result.name %>
            <span class="pull-right view-post"><i class="fa fa-eye"></i> <%= result.view %> views</span>
        </div>
        <% } %>
        <div class="panel-body">
          <%= result.content.replace('&lt;', '<').replace('&gt;', '>') %>
        </div>


          <div id="fb-root">BÌNH LUẬN</div>
        
          <div id="fb-comment-content">
            <div id="fb-comments" class="fb-comments" data-href="http://vnmagic.net<%= req.url %>" data-mobile="true" data-width="100%" data-numposts="10"></div>
          </div>
          <script>(function(d, s, id) {
              var js, fjs = d.getElementsByTagName(s)[0];
              if (d.getElementById(id)) return;
              js = d.createElement(s); js.id = id;
              js.src = "//connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v2.8&appId=343633113334";
              fjs.parentNode.insertBefore(js, fjs);
            }(document, 'script', 'facebook-jssdk'));</script>
        </div>




    </div>

    <%- partial ('common/column-right.ejs') %>

  </div>



</div>

